<!DOCTYPE html>

<html>
<head>
    <title>Mapa de Ratones en Buenos Aires</title>
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        // Variables para almacenar usuario y contraseña
        var usuario = "usuario";
        var contraseña = "contraseña";

        // Función para autenticar al usuario
        function autenticar() {
            var inputUsuario = prompt("Ingrese su nombre de usuario:");
            var inputContraseña = prompt("Ingrese su contraseña:");

            if (inputUsuario === usuario && inputContraseña === contraseña) {
                mostrarMapa(); // Si la autenticación es exitosa, muestra el mapa
            } else {
                alert("Usuario o contraseña incorrectos. Inténtelo de nuevo.");
            }
        }

        // Función para mostrar el mapa después de la autenticación
        function mostrarMapa() {
            var map;
            function initMap() {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: {lat: -34.6037, lng: -58.3816}, // Centro en Buenos Aires
                    zoom: 12
                });

                // Marcadores de las instituciones educativas donde se encontraron ratas
                var markers = [
                    {
                        position: {lat: -34.6076, lng: -58.4305}, // Coordenadas de una institución
                        title: 'Escuela 123 - Ratas encontradas el 01/03/2024'
                    },
                    // Agregar más marcadores aquí...
                ];

                // Coloca los marcadores en el mapa
                markers.forEach(function(marker) {
                    var marker = new google.maps.Marker({
                        position: marker.position,
                        map: map,
                        title: marker.title
                    });
                });
            }

            // Inicializa el mapa al cargar la página
            initMap();
        }
    </script>
    <!-- Carga de la API de Google Maps -->
    <script src="https://maps.googleapis.com/maps/api/js?key=TU_API_KEY&callback=autenticar"></script>
</body>
</html>
